/* relationship.wxss */

.item {
  margin-top: 20rpx;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}
.item-main {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.head {
  width: 12%;
}
.content {
  padding: 10rpx 0;
  width: 84%;
  font-size: 11pt;
}
.nickname {
  color: #175AA7;
}
.text {
  margin-top: 16rpx;
  line-height: 20pt;
}
.bottom {
  margin-top: 16rpx;
  overflow: hidden;
}
.time {
  float: left;
  font-size: 10pt;
  color: #9D9D9D;
}
.interaction {
  float: right;
}
.interaction image {
  width: 40rpx;
  height: 40rpx;
}
.voteup {
  display: inline-block;
  margin-right: 30rpx;
  height: 40rpx;
}
.voteup image {
  vertical-align: middle;
}
.voteup text {
  margin-left: 5rpx;
  vertical-align: middle;
  font-weight: bold;
}
.comment-btn {
  margin-right: 20rpx;
  vertical-align: middle;
}
.comment {
  position: relative;
  margin-top: 20rpx;
  padding: 10rpx 20rpx 20rpx 20rpx;
  background: #CBCBCB;
  font-size: 11pt;
}
.angle {
  position: absolute;
  top: -12rpx;
  left: 20rpx; 
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 14rpx solid #CBCBCB;
}
.comment-item {
  margin-top: 20rpx;
}
.comment-author {
  color: #175AA7;
}
.comment-box {
  display: flex;
  justify-content: space-between;
  position: fixed;
  top: 50%;
  left: 0;
  transform: translate(0, -200%);
  width: 100%;
  min-height: 100rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #CCC;
  background: #DCDCDC;
}
.comment-input {
  width: 75%;
}
.comment-input textarea {
  width: 100%;
  height: 100%;
  border-bottom: 1rpx solid #35C86D;
  font-size: 12pt;
  overflow-y: auto;
}
.comment-send {
  position: relative;
  width: 15%;
}
.send-btn {
  position: absolute;
  bottom: 0;
  width: 98%;
  height: 60rpx;
  padding: 3%;
  line-height: 60rpx;
  text-align: center;
  background: #35C86D;
  color: #fff;
  font-size: 11pt;
}