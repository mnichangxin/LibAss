/* reserve.wxss */

.reverse-book {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  width: 100%;
  line-height: 80rpx;
  background: #fff;
}
.reverse-book text {
  font-size: 13pt;
}
.book-name, .holding-num {
  font-style: italic;
}
.section {
  width: 100%;
  margin-top: 40rpx;
}
.section-title {
  font-size: 13pt;
  text-align: center;
  color: #09BB07;
}
.picker-date, .picker-time {
  width: 100%;
  line-height: 80rpx;
  margin-top: 60rpx;
  background: #EEEEEE;
  text-align: center;
  font-size: 12pt;
}
.picker text {
  margin-left: 10rpx;
  font-size: 11pt;
}
.tip {
  margin-top: 60rpx;
  text-align: center;
  font-size: 10pt;
  color: #888888;
}
.button {
  margin-top: 60rpx;
  width: 90%;
  line-height: 80rpx;
  border: 0;
  border-radius: 4rpx;
  background: #09BB07;
  color: #fff;
}
.keyboard {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40%;
}
.keyboard .key {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 33%;
  height: 25%;
  background: #fff;
  text-align: center;
}
.keyboard .key:active {
  background: #D6D6D6;
}
.keyboard .key span {
  font-size: 15pt;
  font-weight: bold;
}
.keyboard .key-space, .keyboard .key-close {
  background: #D6D6D6;
}
.key-close image {
  width: 20%;
  height: 20%;
}