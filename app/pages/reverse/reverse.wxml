<!--reserve.wxml-->
<view class="container">
  <view class="reverse-book">
    <text>预约的图书：<text class="book-name">{{book.bookTitle}}</text></text>
    <text>馆藏：<text class="holding-num">{{book.bookHolding}}</text></text>
  </view>
  <view class="section">
    <view class="section-title">请选择预约时间：</view>
    <picker mode="date" value="{{date}}" start="{{date_start}}" end="{{date_end}}" bindchange="dateChange" class="picker-date">
      <view class="picker">
        预约日期: <text>{{date}}</text>
      </view>
    </picker>
    <picker mode="time" value="{{time}}" start="08:00" end="21:00" bindchange="timeChange" class="picker-time">
      <view class="picker">
        预约时间: <text>{{time}}</text>
      </view>
    </picker>
    <view class="tip">预约后请三天内到图书馆取书，过期无效</view>
    <button class="button" bindtap="subscribeTap">确认选择</button>
  </view>
  <view class="keyboard">
    <view class="key" style="border-right: 1rpx solid #D6D6D6; border-bottom: 1rpx solid #D6D6D6;"><span>1</span></view>
    <view class="key" style="border-right: 1rpx solid #D6D6D6; border-bottom: 1rpx solid #D6D6D6;"><span>2</span></view>
    <view class="key" style="border-bottom: 1rpx solid #D6D6D6;"><span>3</span></view>
    <view class="key" style="border-right: 1rpx solid #D6D6D6; border-bottom: 1rpx solid #D6D6D6;"><span>4</span></view>
    <view class="key" style="border-right: 1rpx solid #D6D6D6; border-bottom: 1rpx solid #D6D6D6;"><span>5</span></view>
    <view class="key" style="border-bottom: 1rpx solid #D6D6D6;"><span>6</span></view>
    <view class="key" style="border-right: 1rpx solid #D6D6D6;"><span>7</span></view>
    <view class="key" style="border-right: 1rpx solid #D6D6D6;"><span>8</span></view>
    <view class="key"><span>9</span></view>
    <view class="key key-space"><span></span></view>
    <view class="key" style="border-top: 1rpx solid #D6D6D6;"><span>0</span></view>
    <view class="key key-close"><span></span></view>
  </view>
</view>
