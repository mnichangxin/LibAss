/* account.wxss */

.container {
    width: 90%;
    margin: 0 auto;
}
.username-setting {
    display: flex;
    justify-content: center;
    margin-top: 40px;
    width: 100%;
}
.username-setting text {
    line-height: 1.7em;
    color: #09BB07;
    font-size: 12pt;
}
.username-setting input {
    margin-left: 40rpx;
    /*padding-left: 20rpx;*/
    width: 300rpx;    
    border-bottom: 1px solid #cfcfcf;
    text-align: center;
    font-size: 12pt;
}
.change-wrap {
  margin-left: 40rpx;
  width: 100rpx;
  height: 50rpx;
}
.text-holder {
  opacity: 0;
  visibility: hidden;
}
.change-phone, .change-password {
  margin-left: 40rpx;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 6rpx;
  background: #09BB07;
  color: #fff;
  font-size: 11pt;
}

.button {
    display: flex;
    justify-content: center;
    margin-top: 100rpx;
    width: 100%;
}
.modify-btn {
    width: 35%;
    color: #fff;
    background: #09BB07;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    font-size: 12pt;
}

