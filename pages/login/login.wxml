<!--login.wxml-->
<view class="container">
  <!-- 根据condition判断渲染哪个模板 -->
  <view class="login" wx:if="{{condition}}">
    <view class="section">
        <view class="section-title">用户名：</view>
        <input name="username" placeholder="请输入手机号" />
    </view>
    <view class="section">
        <view class="section-title">密码：</view>
        <input password type="text" name="password" placeholder="密码" />
    </view>
    <view class="button" id='button'>
      <button formType="submit">登录</button>
    </view>
    <view class="tip" id="tip"></view>
    <view class="login-weixin" bindtap="loginTap">
      <image src="../static/icon/weixin.png"></image>
      <text>一键登录，方便快捷</text>
    </view>
    <navigator class="reg-btn" hover-class="none" bindtap="toReg">没有账号？立即注册</navigator>
  </view>
  <view class="reg" wx:else>
    <!--<view class="section">
      <view class="section-title">用户名：</view>
      <input name="username" placeholder="除下划线，不能含特殊字符" />
    </view>-->
    <view class="section" wx:if="{{bind_phone}}">
      <view class="bind-phone">第一次需绑定手机号</view>
    </view>
    <view class="section">
      <view class="section-title">手机号：</view>
      <input name="username" placeholder="11位手机号" />
    </view>
    <view class="section">
        <view class="section-title">密码：</view>
        <input password type="text" name="password" placeholder="至少6位" />
    </view>
    <view class="section">
        <view class="section-title">确认：</view>
        <input password type="text" name="password" placeholder="确认密码" />
    </view>
    <view class="button" id='button'>
      <button formType="submit">注册</button>
    </view>
    <view class="return" bindtap="toLogin">返回登录</view>
  </view>
</view>