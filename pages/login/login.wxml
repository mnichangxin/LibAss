            <label><checkbox value="checkbox1" checked="checked"/>自动登录</label>
      </checkbox-group>
      <view style="float:left;">
        <navigator url="redirect?title=redirect" open-type="redirect" hover-class="other-navigator-hover">免费注册</navigator>
