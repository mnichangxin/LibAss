/* me.wxss */

/* top */
.top {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 40rpx;
  width: 100%;
  background: #09BB07;
  color: #fff;
}
.login {
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}
.login .user-head, .login .user-name, .login .exit-btn {
  display: flex;
  justify-content: center;
}
.login .user-head {
  margin-top: 0;
}
.login .user-name {
  margin-top: 30rpx;
}
.login .exit-btn {
  margin-top: 40rpx;
}
.login .user-head image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.exit-btn {
  height: 40rpx;
}
.exit-btn text {
  display: inline-block;
  vertical-align: middle;
  font-size: 12pt;
}
.exit-btn image {
  display: inline-block;
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.non-login {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 100%;
  font-size: 13pt;
}
.non-login .user-head {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  background: #ccc;
  border-radius: 50%;
}
.non-login .user-head image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.non-login .non-login-btn {
  margin-top: 30rpx;
  height: 40rpx;
} 
.non-login .non-login-btn text {
  display: inline-block;
  vertical-align: middle;
}
.non-login .non-login-btn image {
  display: inline-block;
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

/* main */
.main {
  width: 100%;
}
.menu {
  margin-top: 20rpx;
  width: 100%;
}
.menu .menu-list {
  position: relative;
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
  line-height: 100rpx;
  border-bottom: 1px solid #DEDEDE;
  background: #fff;
  font-size: 12pt;
  color: #515151;
}
.menu .menu-set {
  margin-top: 20rpx;
}
.menu-list image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}
.menu-list text {
  margin-left: 20rpx;
  vertical-align: middle;
}
.menu-list .list-arrow {
  position: absolute;
  top: 25rpx;
  right: 30rpx;
}


