/* detail.wxss */

/* nav */
.nav-top {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  width: 100%;
  background: #fff;
}
.nav-top image {
  padding: 20rpx 0;
  height: 200px;
}
.book {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  padding-top: 10rpx;
  width: 100%;
  border-top: 2rpx solid #DEDEDE;
  font-size: 12pt;
  color: #888888;
}
.book > text {
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.book-title {
  color: #85BE1C;
}


/* main */
.main {
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  width: 100%;
}
.main-list {
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  font-size: 11pt;
}
.list-title {
  padding: 20rpx;
  font-size: 13pt;
  color: #000000;
  text-align: center;
}
.list-content {
  line-height: 24pt;
}
.book-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  font-size: 12pt;
}
.book-holding {
  margin-top: 20rpx;
}
.book-holding-num {
  color: #85BE1C;
}
.reverse {
  color: #85BE1C;
  font-size: 12pt;
}