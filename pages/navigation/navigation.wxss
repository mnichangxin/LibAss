/* search */
.search {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #D4D4D4;
  background: #fff;
}
.search input {
  width: 90%;
  height: 60rpx;
  border-radius: 30rpx;
  background: #EAEAEA;
  text-align: center;
  font-size: 11pt;
}
.search-placeholder {
  text-align: center;
  font-size: 10pt;
}

/* main */
.main {
  padding-top: 85rpx;
  width: 100%;
  min-height: 100%;
}
.list {
  margin-top: 50rpx;
  padding: 0 30rpx 30rpx 30rpx;
}
.list-title {
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-left: 8rpx solid #09BB07;
  font-size: 14pt;
}
.list-list {
  margin-top: 30rpx;
  padding: 20rpx 0;
  border-radius: 4rpx;
  background: #EAEAEA;
}
.list-list .list-list-title {
  padding: 0 20rpx;
  font-size: 12pt;
  color: #09BB07;
}
.list-list .list-list-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
}
.list-list .list-item {
  margin: 20rpx;
  font-size: 10pt;
  color: #353535;
}
