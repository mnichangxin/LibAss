<!--navigation.wxml-->
<view class="container">
  <view class="search">
    <input type="text" placeholder="搜索图书" placeholder-class="search-placeholder" confirm-type="search" />
  </view>
  <view class="main">
    <view class="list" wx:for="{{primary}}">
      <view class="list-title">{{item.title}}</view>
      <view class="list-content">
        <view class="list-list" wx:for="{{item.second}}" wx:for-item="i">
          <view class="list-list-title">{{i.title}}</view>
          <view class="list-list-content">
            <block wx:for="{{i.third}}" wx:for-item="j">
              <navigator url="{{'../query/query?query_name=' + j}}" class="list-item">{{j}}</navigator>
            </block>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
