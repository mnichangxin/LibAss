<!--curborrow.wxml-->
<view class="container">
  <block wx:if="{{condition}}">
    <view class="item" wx:for="{{curborrow}}" wx:key="i">
      <view class="book-id">图书ID：<text>{{item.id}}</text></view>
      <view class="book-title">书名：<text>{{item.book_title}}</text></view>
      <view class="borrow-date">借阅时间：<text>{{item.borrow_date}}</text></view>
      <view class="return-date">应还时间：<text>{{item.return_date}}</text></view>
    </view>
  </block>
  <view class="item" wx:else>暂无记录</view>
</view>
